.mx_imagemodal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 102;

  display: flex;
  align-items: center;
  justify-content: center;

  background: rgba(0, 0, 0, .4);

  cursor: pointer;

  &__image {
    cursor: initial;
    border-radius: 16px;
    max-width: 80%;
    max-height: 80%;
  }
}